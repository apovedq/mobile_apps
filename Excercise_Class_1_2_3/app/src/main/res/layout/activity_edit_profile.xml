<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/optionTwoIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/optionOneIV"
        app:layout_constraintTop_toBottomOf="@+id/chooserTV"
        app:srcCompat="@drawable/pp2" />

    <ImageView
        android:id="@+id/optionOneIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toStartOf="@+id/optionTwoIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooserTV"
        app:srcCompat="@drawable/pp1" />

    <TextView
        android:id="@+id/chooserTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="Choose your profile picture"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameChooserTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Chooser your new name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionTwoIV" />

    <EditText
        android:id="@+id/editNamePT"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Write the new name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameChooserTV" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNamePT" />

    <ImageView
        android:id="@+id/optionOneDone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#85FFFFFF"
        android:src="@drawable/done"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/optionOneIV"
        app:layout_constraintEnd_toEndOf="@+id/optionOneIV"
        app:layout_constraintStart_toStartOf="@+id/optionOneIV"
        app:layout_constraintTop_toTopOf="@+id/optionOneIV" />

    <ImageView
        android:id="@+id/optionTwoDone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#85FFFFFF"
        android:src="@drawable/done"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/optionTwoIV"
        app:layout_constraintEnd_toEndOf="@+id/optionTwoIV"
        app:layout_constraintStart_toStartOf="@+id/optionTwoIV"
        app:layout_constraintTop_toTopOf="@+id/optionTwoIV" />

</androidx.constraintlayout.widget.ConstraintLayout>